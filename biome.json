{
	"linter": {
		"enabled": true,
		"rules": {
      "all": true,
      "nursery": {
        "useImportRestrictions": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noEmptyInterface": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      }
		}
	},
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentWidth": 2,
    "indentStyle": "tab",
    "lineWidth": 120
  }
}
